<!-- landmarks/index -->

<h1>NYC Historical Landmarks</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Year Completed</th>
    <th>Figure</th>
  </tr>
  <% @landmarks.each do |landmark| %>
    <tr>
      <td><a href="/landmarks/<%= landmark.id %>"</a><%= landmark.name %></td>
      <td><%= landmark.year_completed %></td>

      <% if landmark.figure_id %>
        <td><%= landmark.figure.name %></td>
      <% else %>
        <td> - </td>
      <% end %>
    </tr>
  <% end %>
<table>

<p><a href="/landmarks/new">Create New Landmark</a> or Return to <a href="/">Figures Index</a></p>
