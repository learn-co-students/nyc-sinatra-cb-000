<h1>Create a New Landmark</h1>

<form action="/landmarks" method="post">
  <h3>Name:</h3>
  <p><input id="landmark_name" type="text" name="landmark[name]" required></p>

  <h3>Year:</h3>
  <p><input id="landmark_year_completed" type="text" name="landmark[year_completed]" required></p>

  <h3>Figures:</h3>
  <% Figure.all.each do |figure| %>
    <p><input type="radio" name="landmark[figure_id]" value="<%=figure.id%>"><%=  figure.name %></p>
  <% end %>

  <h3>Create New Figure:</h3>
  <p>Name: <input type="text" name="figure[name]"></p>

  <p><input type="submit" value="Create New Landmark"></p>
</form>
