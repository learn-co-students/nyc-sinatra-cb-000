<h2>Create New Landmark</h2>

<!-- add content here -->
<form class="" action="/landmarks" method="post">
  <h2>Name: <input type="text" name="landmark[name]" id="landmark_name" value=""></h2>
  <h2>Year completed: <input type="text" name="landmark[year_completed]" id="landmark_year_completed" value=""></h2>

  <%@figures.each do |f|%>
    <input type="checkbox" name="figure[figure_ids][]" value="<%=f.id%>" id="figure_<%=f.id%>"><%=f.name%></input>
  <%end%>
  <h2>Create New Landmark:</h2>
  <input type="text" name="figure[name]" id="new_figure"value="">


  <%@titles.each do |t|%>
    <input type="checkbox" name="figure[title_ids][]" value="<%=t.id%>" id="title_<%=t.id%>"><%=t.name%></input>
  <%end%>
  <h2>Create New Title:</h2>
  <input type="text" name="title[name]" id="new_title" value="">


  <input type="submit" id="Create New Landmark" name="" value="Create New Landmark">
</form>




