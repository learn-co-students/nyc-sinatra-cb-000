<h2>Edit Historical Landmark</h2>

<form action="/landmarks/<%= @landmark.id %>" method="post">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <input type="text" value="<%= @landmark.name %>" name="landmark[name]" id="name">
    <input type="text" value="<%= @landmark.year_completed %>" name="landmark[year_completed]" id="year_completed">
    <br>
    <input type="submit" value="Edit Landmark">
</form>
<br>
