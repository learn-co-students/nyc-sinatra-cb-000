<h2>Edit Historical Landmark</h2>

<form action="/landmarks/<%= @landmark.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <p>Name: <input type="text" name="landmark[name]" value="<%= @landmark.name %>"></p>
  <p>Year Completed: <input type="text" name="landmark[year_completed]" value="<%= @landmark.year_completed %>"></p>
  <input type="submit" value="Edit Landmark">
</form>

<a class="button" href="/figures">Landmarks</a>
<a class="button" href="/">Home</a>
