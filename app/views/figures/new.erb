<html>
<form method="POST" action="/figures">
  <label>Name</label>
  <input type="text" name="figure[name]" id="figure_name"><br></br>

  <h3>Titles</h3><br>
  <% @titles.each do |title| %>
    <%= title.name %> <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="title_<%= title.id%>"><br>
  <% end %>

  <br>

  <h3>Create New Title:</h3>
  <input type="text" name="title[name]" id="new_title"><br></br>

  <h3>Landmarks</h3><br>
  <% @landmarks.each do |landmark| %>
    <%= landmark.name %> <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="landmark_<%= landmark.id %>"><br>
  <% end %>

  <br>

  <h3>Create New Landmark:</h3>
  <label>Name: </label>
  <input type="text" name="landmark[name]" id="new_landmark">
  <label> Year: </label>
  <input type="text" name="landmark[year]" id="landmark_year">
  <input type="submit" id="Create New Figure" value="Create New Figure">

</form>
</html>
