<form action="/figures" method="post">
  <label for="figure[name]"></label>
  <input type="text" id="figure_name" name="figure[name]" value="">
  <br>
  <h2>Titles</h2>
  <%@titles.each do |title|%>
    <input type="checkbox" id="title_<%=title.id%>" name="figure[title_ids][]" value="<%=title.id%>"><%=title.name%><br>
  <%end%>
  <h2>Create New Title:</h2>
  <input type="text" id="new_title" name="title[name]" value="">
  <h2>Landmarks</h2>
  <%@landmarks.each do |landmark|%>
    <input type="checkbox" id="landmark_<%=landmark.id%>" name="figure[landmark_ids][]" value="<%=landmark.id%>"><%=landmark.name%><br>
  <%end%>
  <h2>Create New Landmark:</h2>
  <label for="lanmark[name]">Name:</label>
  <input type="text" id="new_landmark" name="landmark[name]" value="">
  <label for="landmark[year_completed]"></label>
  <input type="text" name="landmark[year_completed]" value="">
  <input type="submit" id="submit" name="submit" value="Create New Figure">
</form>
<br>
<br>
<a class="button" href="/figures">Figures</a>
<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
