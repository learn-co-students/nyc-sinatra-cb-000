<form action="/figures" method="post">
    Name<input type="text" name="figure[name]" id="figure_name" value="figure_name">
    <br><br>
    <b>Titles</b>
    <br><br>
    <% Title.all.each do |title| %>
    <%=title.name %><input id="title_<%=title.id%>" type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="<%=title.id%>"><br>
    <% end %>
    <br><br>
    <b>Create New Title:</b>
    <br><br>
    <input type="text" id="new_title" name="title[name]" value="">
    <br><br>
    <b>Landmarks</b>
    <br><br>
    <% Landmark.all.each do |landmark| %>
    <%=landmark.name%><input id="landmark_<%=landmark.id%>" type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="<%=landmark.id%>"><br>
    <% end %>
    <br><br>
    <b>Create New Landmark:</b>
    <br><br>
    Name:<input type="text" id="new_landmark" name="landmark[name]">
    Year:<input type="text" name="landmark[year_completed]" >
    <input type="submit" name="" value="Create New Figure">
</form>
