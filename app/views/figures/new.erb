<!-- figures/new -->

<h1>New NYC Historic Figures></h1>

<form action="/figures" method="POST">
  <h3>Name: <input type="text" name="figure[name]" id="figure_name"></h3>

  <h2>Titles</h2>
  <% @titles.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%= title.id %>"><%= title.name %></input>
  <% end %>

  <h2>And/or Create New Title</h2>
  <input type="text" name="title[name]" id="new_title"></input>

  <h2>Landmarks</h2>
  <% @landmarks.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>"><%= landmark.name %>
    </input>
  <% end %>

  <h2>And/or Create New Landmark:</h2>
  <p>Name: <input type="text" name="landmark[name]" id="new_landmark"></input> Year Completed: <input type="text" name="landmark[year_completed]" id="new_landmark_year"></input></p>

  <br></br>

  <input type="submit" id="create" value="Create New Figure">

</form>

<br></br>

<form action="/figures" method="GET">
  <input type="submit" value="Go Back to Figures Index">
</form>
