<h1>Edit <%=@figure.name%></h1>
<form action="/figures/<%=@figure.id%>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <h2>New name: <input type="text" id="figure_name" name="figure[name]"></h2>
  <%@titles.each do |t|%>
    <input type="checkbox" name="figure[title_ids][]" value="<%=t.id%>" id="title_<%=t.id%>"><%=t.name%></input>
  <%end%>
  <h2>Create New Title:</h2>
  <input type="text" name="title[name]" id="new_title" value="">

  <%@landmarks.each do |l|%>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%=l.id%>" id="landmark_<%=l.id%>"><%=l.name%></input>
  <%end%>
  <h2>Create New Landmark:</h2>
  <input type="text" name="landmark[name]" id="new_landmark"value="">

  <input type="submit" id="Edit Figure" value="submit">
</form>
