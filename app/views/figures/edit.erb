<h2>Edit Historical Figure</h2>

<form action="/figures/<%= @figure.id %>" method="post">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <input type="text" value="<%= @figure.name %>" name="figure[name]" id="figure_name">
    
    <h3>Titles</h3>
    <% Title.all.each do |title| %>
        <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" <%='checked' if @figure.titles.include?(title) %>
        value="<%= title.id %>"> <%= title.name %><br>
    <% end %>
    <h4>Create New Title:</h4>
    <input type="text" name="title[name]" id="new_title" placeholder="New Title">

    <h3>Landmarks</h3>
    <% Landmark.all.each do |lm| %>
        <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= lm.id %>" <%='checked' if @figure.landmarks.include?(lm) %>
        value="<%= lm.id %>"> <%= lm.name %><br>
    <% end %>
    <h4>Create New Landmark:</h4>
    <input type="text" name="landmark[name]" id="new_landmark" placeholder="Name">
    <input type="text" name="landmark[year_completed]" id="??" placeholder="Year Completed">
    <br><br>

    <input type="submit" value="Edit Figure">
</form>
<br>
<a class="button" href="/figures">All Figures</a>
<a class="button" href="/">Home</a>
