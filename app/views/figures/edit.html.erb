<form method="POST" action="/figures/<%= @figure.id %>">
  <input type="hidden" name="_method" value="patch">

  <label for="figure_name">Figure Name:</label>
  <input type="text" value="<%= @figure.name %>" name="figure[name]" id="figure_name">
  <br>

  <label>Title:</label>
  <% @titles.each do |title| %>
    <input type="checkbox" id="title_<%= title.id %>" value="<%= title.id %>" name="figure[title_ids][]"
    <%= 'checked' if @figure.titles.include?(title) %>><%= title.name %></input>
  <% end %>
  <br>

  <label>Landmarks:</label>
  <% @landmarks.each do |landmark| %>
    <input type="checkbox" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>" name="figure[landmark_ids][]"
    <%= 'checked' if @figure.landmarks.include?(landmark) %>><%= landmark.name %></input>
  <% end %>
  <br>

  <label for="new_title">New Title:</label>
  <input type="text" id="new_title" name="title[name]">
  <br>

  <label for="new_landmark">New Landmark:</label>
  <input type="text" id="new_landmark" name="landmark[name]">
  <br>

  <input type="submit" value="Edit Figure">
</form>
<a class="button" href="/landmarks">Landmarks</a> <br>
<a class="button" href="/">Home</a>
