<form method="POST" action="/figures">
  <label for="figure_name">Figure Name:</label>
  <input type="text" id="figure_name" name="figure[name]">
  <br>

  <label>Title:</label>
  <% @titles.each do |title| %>
    <input type="checkbox" id="title_<%= title.id %>" value="<%= title.id %>" name="figure[title_ids][]"><%= title.name %></input>
  <% end %>
  <br>

  <label>Landmarks:</label>
  <% @landmarks.each do |landmark| %>
    <input type="checkbox" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>" name="figure[landmark_ids][]"><%= landmark.name %></input>
  <% end %>
  <br>

  <label for="new_title">New Title:</label>
  <input type="text" id="new_title" name="title[name]">
  <br>

  <label for="new_landmark">New Landmark:</label>
  <input type="text" id="new_landmark" name="landmark[name]">
  <br>

  <input type="submit" value="Create New Figure">
</form>
<a class="button" href="/landmarks">Landmarks</a> <br>
<a class="button" href="/">Home</a>
