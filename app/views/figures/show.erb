<!DOCTYPE html>
<html>
  <head>
    <title><%= @figure.name %></title>
  </head>
  <body>
    <h1><%= @figure.name %></h1>
    <a href="<%= @figure.id %>/edit">Edit this Figure</a>

    <h3>Titles:</h3>
    <% @figure.titles.each do |title| %>
      <p><%= title.name %></p>
    <% end %>

    <h3>Landmarks:</h3>
    <% @figure.landmarks.each do |landmark| %>
      <p><a href="/landmarks/<%= landmark.id %>"><%= landmark.name %></a></p>
    <% end %>
  </body>
</html>
